<%= form_for wiki do |f| %>
  <% if wiki.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(wiki.errors.count, "error") %>.</h4>
      <ul>
        <% wiki.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_group_tag(wiki.errors[:title]) do %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Name the wiki page" %>
  <% end %>

  <%= form_group_tag(wiki.errors[:body]) do %>
    <%= f.label :body%>
    <%= f.text_area :body, rows: 8, class: 'form-control', id: 'wiki_body', placeholder: "Describe the wiki" %>
  <% end %>

  <% if authorized_for_this_private_wiki?%>
    <%= form_group_tag(wiki.errors[:private]) do %>
      <%= f.label :private, class: 'checkbox' do %>
        <%= f.check_box :private %> Private wiki
      <% end %>
    <% end %>

  <% else %>
    <p><%= link_to  "Go Premium", 
                    new_subscription_path, 
                    class: "", 
                    method: :get %> 
      to change the privacy of this wiki.
    </p>
  <% end %>
  
  <%= f.fields_for :collaboration, id: "collaborators_submission" do |f2| %>
    <div class="form-group" id="collaborator_1">
      <%= f2.hidden_field :wiki_id %>
      <%= f2.hidden_field :user_id %>
    </div>
  <% end %>
  
  <div class="form-group pull-right">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
  
<% end %>
