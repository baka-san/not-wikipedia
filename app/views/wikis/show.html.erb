<div class="row wikis-show">

  <h4 class="media-heading wiki-title">
    <strong><%= @wiki.title %></strong>
  </h4>

  <div class="col-xs-12 col-md-8 wiki-info">
    <%= markdown { @wiki.body } %>
  </div>

  <% #if current_user %>
    <div class="col-md-4 edit-delete">
      <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
      <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to end this wiki\'s life?'} %>
    </div>
  <% #end %>

  <div class="col-md-4 edit-delete">
    <% @wiki.users.each do |user| %>
      <%= user.email %>
    <% end %>
  </div>

</div>
